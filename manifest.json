{
  "manifest_version": 3,
  "name": "Deep Work Focus Timer",
  "version": "1.0.2",
  "description": "Professional website blocking for focus sessions",
  "permissions": ["storage", "tabs", "declarativeNetRequest", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost:*/*",
        "https://localhost:*/*",
        "http://127.0.0.1:*/*",
        "https://127.0.0.1:*/*",
        "https://*.vercel.app/*",
        "https://*.netlify.app/*",
        "https://*.github.io/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
